<h1>Listing messages</h1>

<table>
  <tr>
    <th>Body</th>
    <th>User</th>
    <th>Attachment file name</th>
    <th>Attachment content type</th>
    <th>Attachment file size</th>
    <th>Attachment uploaded at</th>
  </tr>

<% for message in @messages %>
  <tr>
    <td><%=h message.body %></td>
    <td><%=h message.user_id %></td>
    <td><%=h message.attachment_file_name %></td>
    <td><%=h message.attachment_content_type %></td>
    <td><%=h message.attachment_file_size %></td>
    <td><%=h message.attachment_uploaded_at %></td>
    <td><%= link_to 'Show', message %></td>
    <td><%= link_to 'Edit', edit_message_path(message) %></td>
    <td><%= link_to 'Destroy', message, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New message', new_message_path %>
