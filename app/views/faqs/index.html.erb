<h1>Listing faqs</h1>

<table>
  <tr>
    <th>Title</th>
    <th>Body</th>
    <th>Category</th>
  </tr>

<% for faq in @faqs %>
  <tr>
    <td><%=h faq.title %></td>
    <td><%=h faq.body %></td>
    <td><%=h faq.category_id %></td>
    <td><%= link_to 'Show', faq %></td>
    <td><%= link_to 'Edit', edit_faq_path(faq) %></td>
    <td><%= link_to 'Destroy', faq, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New faq', new_faq_path %>
