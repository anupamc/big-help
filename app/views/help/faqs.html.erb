<% if !@faqs.blank? %>

  <h3>Wait a sec ... </h3>

  <p>Here are some frequently asked questions for this product/category.<br />
    Take a look real quick.</p>

  <% for faq in @faqs %>

  <p><%= link_to(faq.title, faq.url.blank? ? faq : faq.url, :rel => faq.url.blank? ? 'facebox' : '_blank') %></p>

  <% end %>

  <script type="text/javascript">
    $('a[rel*=facebox]').facebox({
      loading_image : 'loading.gif',
      close_image   : 'closelabel.gif'
    }) 
  </script>

<% end %>